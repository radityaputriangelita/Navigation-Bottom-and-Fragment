                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/orange"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="5dp"
                        android:text="Ulasan"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/movie4"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/movie3"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:onClick="Home_to_Details"
                android:clickable="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/notimeimg"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/notimetodie"/>

                    <TextView
                        android:id="@+id/notimeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@id/notimeimg"
                        android:text="No Time To Die"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tgl4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 Oktober 2021"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/notimeTitle"/>
                    <TextView
                        android:id="@+id/jenis4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 245.000"
                        android:background="@drawable/shapeline"
                        android:layout_marginTop="10dp"
                        android:layout_alignStart="@id/notimeTitle"
                        android:layout_below="@id/seat4"/>
                    <TextView
                        android:id="@+id/seat4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 Ticket"
                        android:padding="3dp"
                        android:background="@color/green_blue"
                        android:textColor="@color/white"
                        android:layout_below="@id/notimeTitle"
                        android:layout_alignStart="@id/notimeTitle"/>
                    <Button
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/orange"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="5dp"
                        android:text="Ulasan"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/movie5"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/movie4"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:onClick="Home_to_Details"
                android:clickable="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/dragonImg"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/howtotrainyourdragon"/>

                    <TextView
                        android:id="@+id/dragonTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@id/dragonImg"
                        android:text="How to Train Your Dragon: The Hidden World"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tgl5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="28 Februari 2019"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/dragonTitle"/>
                    <TextView
                        android:id="@+id/jenis5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 110.000"
                        android:background="@drawable/shapeline"
                        android:layout_marginTop="10dp"
                        android:layout_alignStart="@id/dragonTitle"
                        android:layout_below="@id/seat5"/>
                    <TextView
                        android:id="@+id/seat5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Ticket"
                        android:padding="3dp"
                        android:background="@color/green_blue"
                        android:textColor="@color/white"
                        android:layout_below="@id/dragonTitle"
                        android:layout_alignStart="@id/dragonTitle"/>
                    <Button
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/orange"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="5dp"
                        android:text="Ulasan"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>