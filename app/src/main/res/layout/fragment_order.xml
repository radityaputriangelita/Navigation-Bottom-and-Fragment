<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".OrderFragment">
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MY TICKET"
        android:textAlignment="center"
        android:padding="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/shape"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_title"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="900dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/movie1"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:onClick="Home_to_Details"
                android:clickable="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/johnwickImg"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/johnwick"/>

                    <TextView
                        android:id="@+id/jhonwickwtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@id/johnwickImg"
                        android:text="JOHN WICK 4"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 April 2023"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/jhonwickwtitle"/>
                    <TextView
                        android:id="@+id/jenis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 150.000"
                        android:background="@drawable/shapeline"
                        android:layout_marginTop="10dp"
                        android:layout_alignStart="@id/jhonwickwtitle"
                        android:layout_below="@id/jwg1"/>
                    <TextView
                        android:id="@+id/jwg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Ticket"
                        android:padding="3dp"
                        android:background="@color/green_blue"
                        android:textColor="@color/white"
                        android:layout_below="@id/jhonwickwtitle"
                        android:layout_alignStart="@id/jhonwickwtitle"/>
                    <Button
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/orange"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="5dp"
                        android:text="Ulasan"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/movie2"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/movie1"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:onClick="Home_to_Details"
                android:clickable="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/elementalImg"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/elementals"/>

                    <TextView
                        android:id="@+id/elementalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@id/elementalImg"
                        android:text="ELEMENTAL"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tgl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 Maret 2023"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/elementalTitle"/>
                    <TextView
                        android:id="@+id/jenis2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 175.000"
                        android:background="@drawable/shapeline"
                        android:layout_marginTop="10dp"
                        android:layout_alignStart="@id/elementalTitle"
                        android:layout_below="@id/seat2"/>
                    <TextView
                        android:id="@+id/seat2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Ticket"
                        android:padding="3dp"
                        android:background="@color/green_blue"
                        android:textColor="@color/white"
                        android:layout_below="@id/elementalTitle"
                        android:layout_alignStart="@id/elementalTitle"/>
                    <Button
                        android:layout_width="95dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/orange"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="5dp"
                        android:text="Ulasan"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/movie3"
                android:layout_width="350dp"
                android:layout_height="180dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/movie2"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:onClick="Home_to_Details"
                android:clickable="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/fantasticimg"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fantasticbeast"/>

                    <TextView
                        android:id="@+id/fantasticTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_toRightOf="@id/fantasticimg"
                        android:text="Fantastic Beasts: The Secrets of Dumbledore"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tgl3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 Mei 2022"
                        android:layout_marginEnd="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@id/fantasticTitle"/>
                    <TextView
                        android:id="@+id/jenis3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 55.000"
                        android:background="@drawable/shapeline"
                        android:layout_marginTop="10dp"
                        android:layout_alignStart="@id/fantasticTitle"
                        android:layout_below="@id/seat3"/>
                    <TextView
                        android:id="@+id/seat3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Ticket"
                        android:padding="3dp"
